{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
