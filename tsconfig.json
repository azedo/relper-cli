{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@helpers/*": ["src/helpers/*"]
    }
  },
  "include": ["./", "src/**/*"],
  "exclude": ["node_modules", "lib", "test"]
}
